<resources>
    <!-- Base application theme. -->
    <style name="Theme.JolyBellUnofficial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TopTitleDark">
        <item name="backgroundColor">@color/dark</item>
        <item name="textColor">@color/text_light</item>
    </style>

    <style name="TopTitleLight">
        <item name="backgroundColor">@color/text_light</item>
        <item name="textColor">@color/dark</item>
    </style>

    <style name="DotsTabLayoutDark">
        <item name="tintDots">@color/text_light</item>
    </style>

    <style name="DotsTabLayoutLight">
        <item name="tintDots">@color/text_dark</item>
    </style>

    <style name="TextViewWordSquareDark">
        <item name="textColorNotSquare">@color/text_light</item>
        <item name="textColorSquare">@color/text_dark</item>
        <item name="squareColor">@color/white</item>
    </style>

    <style name="TextViewWordSquareLight">
        <item name="textColorNotSquare">@color/text_dark</item>
        <item name="textColorSquare">@color/text_light</item>
        <item name="squareColor">@color/dark</item>
    </style>
</resources>