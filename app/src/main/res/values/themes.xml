<resources>
    <!-- Base application theme. -->
    <style name="Theme.JolyBellUnofficial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="theme_product_activity">@style/ProductActivityLight</item>
    </style>


    <style name="TopTitleLight">
        <item name="backgroundColor">@color/background_light</item>
        <item name="textColor">@color/dark</item>
    </style>


    <style name="DotsTabLayoutLight">
        <item name="tintDots">@color/text_dark</item>
    </style>

    <style name="TextViewWordSquareLight">
        <item name="textColorNotSquare">@color/text_dark</item>
        <item name="textColorSquare">@color/text_light</item>
        <item name="squareColor">@color/dark</item>
    </style>
    
    <style name="ProductActivityLight" parent="Theme.JolyBellUnofficial">
        <item name="theme_top_title_screen">@style/TopTitleLight</item>
        <item name="theme_dots_tab_layout">@style/DotsTabLayoutLight</item>
        <item name="theme_text_square">@style/TextViewWordSquareLight</item>
        <item name="theme_counter">@style/ProductCounterViewLight</item>
        <item name="colorDescription">@color/text_smooth_light</item>
        <item name="background">@color/background_light</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="priceColor">@color/text_light</item>
        <item name="textColor">@color/text_dark</item>
        <item name="theme_sizes">@style/SizeProductViewLight</item>
        <item name="lineColor">@color/black</item>
    </style>

    <style name="DotsTabLayoutDark">
        <item name="tintDots">@color/text_light</item>
    </style>

    <style name="TopTitleDark">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="textColor">@color/text_light</item>
    </style>

    <style name="TextViewWordSquareDark">
        <item name="textColorNotSquare">@color/text_light</item>
        <item name="textColorSquare">@color/text_dark</item>
        <item name="squareColor">@color/white</item>
    </style>

    <style name="ProductActivityDark" parent="Theme.JolyBellUnofficial">
        <item name="theme_top_title_screen">@style/TopTitleDark</item>
        <item name="theme_dots_tab_layout">@style/DotsTabLayoutDark</item>
        <item name="theme_text_square">@style/TextViewWordSquareDark</item>
        <item name="theme_sizes">@style/SizeProductViewDark</item>
        <item name="theme_counter">@style/ProductCounterViewDark</item>
        <item name="colorDescription">@color/text_light</item>
        <item name="background">@color/background_dark</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="priceColor">@color/text_dark</item>
        <item name="textColor">@color/text_light</item>
        <item name="lineColor">@color/white</item>
    </style>

    <style name="SizeProductViewLight">
        <item name="colorTextSelect">@color/text_light</item>
        <item name="colorTextNotSelect">@color/text_light</item>
        <item name="backgroundColorSelect">@color/dark</item>
        <item name="backgroundColorNotSelect">@color/item_no_select_size_light</item>
    </style>

    <style name="SizeProductViewDark">
        <item name="colorTextSelect">@color/text_dark</item>
        <item name="colorTextNotSelect">@color/text_light</item>
        <item name="backgroundColorSelect">@color/white</item>
        <item name="backgroundColorNotSelect">@color/item_no_select_size_dark</item>
    </style>

    <style name="ProductCounterViewLight">
        <item name="tintStroke">@color/white</item>
        <item name="backgroundColorCounter">@color/black</item>
    </style>

    <style name="ProductCounterViewDark">
        <item name="tintStroke">@color/black</item>
        <item name="backgroundColorCounter">@color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>