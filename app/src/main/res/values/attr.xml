<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextViewWordSquare">
        <attr name="words" format="string" />
        <attr name="rect_words" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="squareColor" format="color"/>
        <attr name="textColorNotSquare" format="color"/>
        <attr name="textColorSquare" format="color"/>
    </declare-styleable>

    <declare-styleable name="TopAnimationLogo">
        <attr name="jumpToEnd" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TopTitleScreen">
        <attr name="text" format="string"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DotsTabLayout">
        <attr name="tintDots" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="ProductActivity">
        <attr name="theme_product_activity" format="reference"/>
        <attr name="theme_top_title_screen" format="reference"/>
        <attr name="theme_dots_tab_layout" format="reference"/>
        <attr name="theme_text_square" format="reference"/>
        <attr name="theme_item_recommendation" format="reference"/>
        <attr name="theme_sizes" format="reference"/>
        <attr name="theme_counter" format="reference"/>
        <attr name="colorDescription" format="color"/>
        <attr name="priceColor" format="color"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SizesProductView">
        <attr name="theme_sizes" />
    </declare-styleable>

    <declare-styleable name="SizeCheckboxView">
        <attr name="colorTextSelect" format="color"/>
        <attr name="colorTextNotSelect" format="color"/>
        <attr name="backgroundColorSelect" format="color"/>
        <attr name="backgroundColorNotSelect" format="color"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="sizeTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="ProductCounterView">
        <attr name="tintStroke" format="color"/>
        <attr name="backgroundColorCounter" format="color"/>
    </declare-styleable>
</resources>